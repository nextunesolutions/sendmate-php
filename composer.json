{
    "name": "sendmate/php-sdk",
    "description": "SendMate PHP SDK for payment processing and wallet management",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nextune Solutions",
            "email": "info@nextune.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SendMate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SendMate\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "stan": "phpstan analyse src tests"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 